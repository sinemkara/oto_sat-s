<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/MARKA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Marka Seçiniz"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/marka"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Yakıt Türü"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/YAKIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00DCFE"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bnz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Benzin"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/dzl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dizel"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Vites Türü"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/VİTES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00DCFE"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mnl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Manuel"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/yo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Yarı Otomatik"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Tam Otomatik"
            android:textSize="15sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Opsiyonlar"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/çlk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çelik Jant"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/djtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dijital Klima"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/snrf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SunRoof"
        android:textSize="20sp" />

    <Button
        android:id="@+id/hsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00DBFD"
        android:text="FİYAT HESAPLA" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"/>
</LinearLayout>